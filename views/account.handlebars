<div class="container">
    <div class="row">
        <div class="col">
            <h1>Hi, {{items.0.User.name}}</h1>
            <a href="/newitem/{{items.0.UserId}}" class="btn btn-primary" data-id="{{items.0.UserId}}">Post an Item</a>

        </div>
        
        <div class="row">
            <br>
            <div class="card">
                <div class="card-header">
                    Your Items
                </div>
                <div class="card-body">
                    <div class="row">

                        {{#each items}}

                        <div class="card col-3 mr-3">
                            <img src="{{imageUrl}}" class="card-img-top" alt="{{name}}">
                            <div class="card-body">
                                <h5 class="card-title">{{name}}</h5>
                                <h4 class="card-title">${{price}}</h4>
                                <p class="card-text">{{location}}</p>
                                <a href="/items/{{id}}" class="btn btn-primary bg-danger delete-btn">Delete</a>
                                <a href="/items/{{id}}" class="btn btn-primary edit-btn">Edit</a>
                            </div>

                        </div>

                        {{/each}}


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>